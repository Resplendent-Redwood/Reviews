 import mongoose from 'mongoose';
  const { Schema } = mongoose;

  const reviewSchema = new Schema({
    Review_ID: Number, 
    Product_ID: Number,
    Summary:  String, 
    Body: String,
    Response: String,
    Date: Date,
    
    photos: {
      photo_ID: Number,
      photo_URL: String,
    }
    
    ratings:  {
      Helpfulness: Number,
      Rating: Number,
      Recommend: Boolean,
    },
    
    reviewer: {
      Reviewer_Name: String,
      Reviewer_Verified: Boolean,
      Email: String,
    },
  
    characteristics: {
      size: Number,
      width:  Number,
      comfort: Number,
      length: Number,
      quality: Number,
      fit: Number
    },
    
  });
